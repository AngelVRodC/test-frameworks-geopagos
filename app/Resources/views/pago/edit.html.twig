{% extends 'base.html.twig' %}
{% block title %}Editar Pago{% endblock %}
{% block body %}
    <div class="container">
        <h1>Editar Pago</h1>
        {{ form_start(edit_form) }}
        <div class="row">
            <div class="col-md-12">
                
                <div class="form-group">
                    <div>
                        <label>Importe</label>
                        <div class="text-danger">
                            {{ form_errors(edit_form.importe) }}
                        </div>
                    </div>
                    {{ form_widget(edit_form.importe) }}
                </div>

                <div class="form-group">
                    <div>
                        <label>Fecha</label>
                        <div class="text-danger">
                            {{ form_errors(edit_form.fecha) }}
                        </div>
                    </div>
                    {{ form_widget(edit_form.fecha) }}
                </div>      
                
                <div class="form-group">
                    <div>
                        <label>Usuarios</label>
                    </div>
                    {{ form_widget(edit_form.usuarios) }}
                </div>  
                
                
            </div>

        </div>
        
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <br>
                    <input type="submit"  class="btn btn-primary" value="Editar Pago" />
                </div>
            </div>
        </div>
        {{ form_end(edit_form) }}  
 
    </div>


{% endblock %}
